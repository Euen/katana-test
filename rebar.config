{erl_opts,
 [
  {src_dirs, ["src"]},
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_missing_spec,
  warn_untyped_record, debug_info
 ]
}.

{deps,
 [
  {xref_runner, "0.2.4"},
  {elvis_core,  ".*", {git, "https://github.com/inaka/elvis_core.git", {tag, "0.2.8-2"}}}
 ]
}.

%% TEST DEPS
{profiles, [
 {test, [
  {deps, [
   {mixer, ".*", {git, "https://github.com/inaka/mixer.git", {tag, "0.1.4"}}}
  ]}
 ]}
]}.
